  "clock": {
    "format": "{:L%A %H:%M}",
    "format-alt": "{:L%d %B W%V %Y}",
    "tooltip": false,
    "on-click-right": "omarchy-cmd-tzupdate"
  },
  "network": {
    "format-icons": [
      "Û∞§Ø ",
      "Û∞§ü ",
      "Û∞§¢ ",
      "Û∞§• ",
      "Û∞§® "
