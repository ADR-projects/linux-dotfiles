    "tooltip": true,
    "tooltip-format": "CPU getting hot? {}¬∞C"
  },
  "memory": {
    "format": "<span> ÓøÖ </span>{used:0.1f}G/{total:0.1f}G ",
    "tooltip": true,
    "tooltip-format": "Memory: {used:0.2f}G/{total:0.2f}G"
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Ôäî",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "blueberry"
  },
  "pulseaudio": {
    "format": "{icon}",
    "on-click": "xdg-terminal-exec --app-id=com.omarchy.Wiremix -e wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5,
    "format-muted": "Óª® ",
    "format-icons": {
      "default": [
        "ÔÄ¶ ",
        "ÔÄß ",
        "ÔÄ® "
      ]
