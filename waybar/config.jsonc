    "tooltip": false,
    "interval": 3600
  },
  "custom/git": {
    "format": "ÓÆ° ",
    "tooltip": false,
    "on-click": "omarchy-launch-webapp https://github.com/ADR-projects"
  },
  "custom/update": {
    "format": "ÔÄ°",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
