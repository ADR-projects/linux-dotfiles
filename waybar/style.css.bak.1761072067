@import "../omarchy/current/theme/waybar.css";

* {
  background-color: rgba(0, 0, 0, 0);
  color: @background;
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: 'CaskaydiaMono Nerd Font Mono';
  font-size: 12px;

}

.modules-left {
  margin-left: 8px;
  margin-top: 2px;
background-color: @foreground;
  border-radius: 3px;
  padding: 1px 6px;
  padding-bottom: 2px;
}
#custom-sep { 
  color: @background;
  margin: 0 6px;
  
}
.modules-center {
  margin-left: 8px;
  margin-top: 2px;
background-color: @foreground;
  border-radius: 2px;
  padding: 1px 6px;
  padding-bottom: 3.2px;
}

.modules-right {
  margin-left: 5px;
  margin-top: 2px;
background-color: @foreground;
  border-radius: 2px;
  padding: 1px 4px;
  margin-right: 8px;
  padding-bottom: 4px;
}

#workspaces button {
  all: initial;
  padding: 0 6px;
  padding-bottom: 3px;
  margin: 0 1px;
  min-width: 8px;
  background-color: rgba(0, 0, 0, 0.372);
  border-radius: 0px;
}

#workspaces button.empty {
  opacity: 0.5;
}

#group-tray-expander,
#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#custom-omarchy,
#custom-screenrecording-indicator,
#custom-update {
  min-width: 12px;
  margin: 0 5px;
  font-size: 18px;
}

#custom-temperature,
#memory {
  font-size: 13px;
}

#custom-temperature:hover,
#memory:hover, #cpu:hover, #bluetooth:hover, #network:hover, #pulseaudio:hover, #battery:hover, #custom-omarchy:hover, #custom-files:hover, #custom-git:hover{
  background-color: @background;
  color: @foreground;
}

#custom-expand-icon {
  margin-right: 7px;
}

tooltip {
  padding: 1px;
  border-radius:10px;
  background-color: @foreground;
  color: @background;
}

#custom-update {
  font-size: 10px;
}
#custom-omarchy{
  font-size: 14px;
}

#clock {
  margin-left: 8.75px;
}

.hidden {
  opacity: 0;
}

#custom-screenrecording-indicator {
  min-width: 12px;
  margin-left: 8.75px;
  font-size: 10px;
}

#custom-screenrecording-indicator.active {
  color: #a55555;
}
#custom-files, #custom-git
{
  font-size: 14px;
  padding-right: 2px;
}
#custom-username{
  font-weight: 900;
}
#custom-git{
  margin-top: -4px;
  padding-left: 5px;
  margin-bottom: -1px;
  font-size:21px;
}